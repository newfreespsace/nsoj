<% this.title='训练计划' %>
    <% include header %>

        <h1><%= title %></h1>

        <table  style="text-align: left;" class="ui very basic center aligned table" width="600">
            <thead>
              <tr>
                <th>编号</th>
                <th>标题</th>
                <th>完成进度(<%= msg.ac %>/<%= msg.tot %>)</th>
                <th>开始时间</th>
              </tr>
            </thead>
            <tbody>
            <% for (let section of sections) { %>
            
                <tr>
                    <td><%= section.id %></td>
                    <td><a href="<%= syzoj.utils.makeUrl(['contest', section.id]) %>"><%= section.title %></a></td>
                    <td>
                        <% let timePercentage = parseInt(100 * section.ac_num   / section.totproblems)%>
                        <div class="ui indicating progress<% if (timePercentage == 100) { %> success<% } %>" data-percent="<%= timePercentage %>">
                        <div class="bar" style="width: <%= timePercentage %>%;"></div>
                    </div>
                    </td>
                    <td><%=  syzoj.utils.formatDate(section.start_time) %></td>
                </tr>
              <% } %>
            </tbody>
          </table>

<% include footer %>
